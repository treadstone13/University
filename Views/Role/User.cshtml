
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model University.Models.UserListViewModel
@using University.Models

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Application Roles</div>
    <div class="panel-body">
        <div class="btn-group">
            <a id="createRoleModal" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add Role
            </a>
        </div>
        <br />
        <br />
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Users</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ViewModels)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.RoleName</td>
                        <td>
                            <a class="btn btn-info addEditUserModal"><i class="glyphicon glyphicon-pencil"></i>  Edit</a>&nbsp;
                            <a class="btn btn-info" href="@Url.Action("DeleteApplicationRole", "Role", new { id = @item.Id})"><i class="glyphicon glyphicon-pencil"></i>  Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="myModalAdd" class="modal fade" role="dialog">
    @Html.BeginForm("AddEditViewUsers", "User", FormMethod.Post){
    <div class="modal-content">
        <div class="modal-body">
            <div class="row">
                <div class="form-group">
                    <label for="exampleInputEmail1">ID</label>
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control", id = "IdRoleView" })
                    @Html.ValidationMessageFor(model => model.Id, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "EnrollmentID" })
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "exampleInputUser1" })
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                <label for="exampleInputEmail1">RoleName</label>
                @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", id = "exampleInputUser1" })
                @Html.ValidationMessageFor(model => model.RoleName, null, new { @class = "text-danger" })
                </div>
            </div>
                <input class="btn btn-primary btn-block" type="submit" value="Add">
        </div>
        
    </div>
    }
</div>


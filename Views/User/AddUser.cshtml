@{ 
    ViewBag.Title = "Add User";
}
@model University.Models.User
@using University.Models
@using (@Html.BeginForm("AddUser", "User", FormMethod.Post))
{
    <div id="myModalAddUser" class="modal fade" role="dialog">

        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "IdEUserView" })
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "EnrollmentID" })
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Confirm Password</label>
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", id = "exampleInputUser1" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">UserName</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", id = "exampleInputUser1" })
                        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "exampleInputUser1" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label for="exampleInputEmail1">Role</label>
                        @Html.TextBoxFor(model => model.ApplicationRoleId, new { @class = "form-control", id = "exampleInputUser1" })
                        @Html.ValidationMessageFor(model => model.ApplicationRoleId, null, new { @class = "text-danger" })
                    </div>
                    <input class="btn btn-primary btn-block" type="submit" value="Add">
                </div>
            </div>
        </div>
    </div>
}
